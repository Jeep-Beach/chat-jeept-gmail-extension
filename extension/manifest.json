{
  "manifest_version": 3,
  "name": "ChatJeePT",
  "version": "1.0.0",
  "description": "AI-powered Gmail reply assistant for Jeep Beach inquiries",

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "identity",
    "webRequest"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://jeepbeach.com/*",
    "https://api.openai.com/*"
  ],

  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },

  "background": {
    "service_worker": "background-combined.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": [
        "utils/storage.js",
        "utils/gmailDom.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],

  "options_page": "options.html",

  "action": {
    "default_popup": "options.html",
    "default_title": "ChatJeePT Settings"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
